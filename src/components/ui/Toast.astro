---
// Toast notifications que aparecen en la esquina
---

<div id="toast-container" class="fixed top-5 right-5 z-50 space-y-4 max-w-xs w-full">
</div>

<template id="toast-template">
  <div class="flex items-center w-full max-w-xs p-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800 toast-notification" role="alert">
    <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg toast-icon">
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path class="toast-icon-path"/>
      </svg>
    </div>
    <div class="ms-3 text-sm font-normal toast-message"></div>
    <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-toast aria-label="Close">
      <span class="sr-only">Cerrar</span>
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
      </svg>
    </button>
  </div>
</template>

<script>
  export type ToastType = 'success' | 'error' | 'warning' | 'info';

  const toastConfig = {
    success: {
      iconClass: 'text-green-500 bg-green-100 dark:bg-green-800 dark:text-green-200',
      iconPath: 'M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z'
    },
    error: {
      iconClass: 'text-red-500 bg-red-100 dark:bg-red-800 dark:text-red-200',
      iconPath: 'M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z'
    },
    warning: {
      iconClass: 'text-orange-500 bg-orange-100 dark:bg-orange-700 dark:text-orange-200',
      iconPath: 'M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z'
    },
    info: {
      iconClass: 'text-blue-500 bg-blue-100 dark:bg-blue-800 dark:text-blue-200',
      iconPath: 'M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z'
    }
  };

  window.showToast = function(message: string, type: ToastType = 'info', duration = 5000) {
    const container = document.getElementById('toast-container');
    const template = document.getElementById('toast-template') as HTMLTemplateElement;
    
    if (!container || !template) return;

    const clone = template.content.cloneNode(true) as DocumentFragment;
    const toast = clone.querySelector('.toast-notification') as HTMLElement;
    const icon = clone.querySelector('.toast-icon') as HTMLElement;
    const iconPath = clone.querySelector('.toast-icon-path') as SVGPathElement;
    const messageEl = clone.querySelector('.toast-message') as HTMLElement;
    const closeBtn = clone.querySelector('[data-dismiss-toast]') as HTMLButtonElement;

    // Configurar toast
    const config = toastConfig[type];
    icon.className = `inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg ${config.iconClass}`;
    iconPath.setAttribute('d', config.iconPath);
    messageEl.textContent = message;

    // Agregar animación de entrada
    toast.style.opacity = '0';
    toast.style.transform = 'translateX(100%)';
    
    container.appendChild(clone);

    // Animar entrada
    setTimeout(() => {
      toast.style.transition = 'all 0.3s ease-out';
      toast.style.opacity = '1';
      toast.style.transform = 'translateX(0)';
    }, 10);

    // Botón cerrar
    closeBtn.addEventListener('click', () => dismissToast(toast));

    // Auto-cerrar
    if (duration > 0) {
      setTimeout(() => dismissToast(toast), duration);
    }
  };

  function dismissToast(toast: HTMLElement) {
    toast.style.opacity = '0';
    toast.style.transform = 'translateX(100%)';
    setTimeout(() => toast.remove(), 300);
  }

  // Declarar tipo global
  declare global {
    interface Window {
      showToast: (message: string, type: ToastType, duration?: number) => void;
    }
  }
</script>
