---  
import { actions } from 'astro:actions';
const { data } = Astro.props;
---

<form class="pt-4 max-w-3xl mx-auto" id="step1Form">
  <input type="hidden" name="step" value="1" />

  <div class="space-y-4">
    <!-- Header compacto -->
    <div>
      <h2 class="text-lg font-medium">
        1. Â¿CuÃ¡ntos empleados deseas gestionar?
      </h2>
      <p class="text-xs text-slate-600 dark:text-white/60 mt-1">
        El precio se calcula por empleado y paquete seleccionado.
      </p>
    </div>

    <!-- Grid principal: 2 columnas en desktop -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Columna izquierda: Slider y nÃºmero -->
      <div class="space-y-3">
        <div>
          <label class="block text-sm font-medium mb-2"
            >NÃºmero de empleados</label
          >
          <input
            id="employeeRangeSlider"
            type="range"
            min="1"
            max="100"
            value={data.company?.employees ?? 5}
            class="w-full h-2 bg-gray-200 dark:bg-gray-700 rounded-lg appearance-none cursor-pointer accent-blue-500 dark:accent-yellow-500"
          />
          <div class="flex justify-between text-xs text-slate-500 mt-1">
            <span>1</span>
            <span>25</span>
            <span>50</span>
            <span>75</span>
            <span>100</span>
          </div>
        </div>

        <div class="flex items-end gap-2">
          <div class="flex-1">
            <label class="block text-xs font-medium mb-1">NÃºmero exacto</label>
            <input
              id="employeeCount"
              name="employees"
              type="number"
              min="1"
              value={data.company?.employees ?? 5}
              required
              class="w-full rounded-md border-2 border-gray-200 dark:border-gray-600 px-3 py-2 text-sm"
            />
          </div>
          <a
            type="button"
            href="tel:+1234567890"
            class="w-full md:w-auto text-gray-300 hover:underline text-sm font-medium"
          >
            +100 empleadosðŸ’¬
          </a>
        </div>
      </div>

      <!-- Columna derecha: Sedes -->
      <div class="space-y-3">
        <div>
          <label class="block text-sm font-medium mb-2"
        >Sedes de tu empresa</label
          >
          <select
        id="locations"
        name="locations"
        required
        class="w-full rounded-md border-2 border-gray-200 dark:border-gray-600 px-3 py-2 text-sm"
          >
        <option value="" selected={!data.company?.locations}>Selecciona una opciÃ³n</option>
        <option value="1" selected={data.company?.locations === '1'}>1 sede</option>
        <option value="2" selected={data.company?.locations === '2'}>2 sedes</option>
        <option value="3" selected={data.company?.locations === '3'}>3 sedes</option>
        <option value="4" selected={data.company?.locations === '4'}>4+ sedes</option>
          </select>
        </div>
      </div>
    </div>

    <!-- BotÃ³n -->
    <div class="flex justify-end">
      <button
        type="submit"
        class="bg-slate-600 text-white px-4 py-2 rounded-md hover:bg-slate-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
        id="submitBtn"
      >
        Continuar
      </button>
    </div>
  </div>
</form>

<script>
  import { actions } from 'astro:actions';
  import { AlertManager } from '../../lib/alertUtils';

  // Guard para SSR
  if (typeof window === 'undefined') {
    throw new Error('This script should only run on the client');
  }

  function initializeStep1() {
    const form = document.getElementById('step1Form') as HTMLFormElement | null;
    const slider = document.getElementById('employeeRangeSlider') as HTMLInputElement | null;
    const numberInput = document.getElementById('employeeCount') as HTMLInputElement | null;
    const locationSelect = document.getElementById('locations') as HTMLSelectElement | null;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement | null;

    if (!form || !slider || !numberInput || !locationSelect || !submitBtn) {
      console.error('[Step1] Required elements not found');
      return;
    }

    // Cleanup function
    const cleanup = () => {
      numberInput.removeEventListener('input', handleNumberInput);
      locationSelect.removeEventListener('change', handleLocationChange);
      slider.removeEventListener('input', handleSliderInput);
      form.removeEventListener('submit', handleSubmit);
    };

    const handleNumberInput = () => {
      const value = parseInt(numberInput.value) || 0;
      if (value <= 100) {
        slider.value = numberInput.value;
      }
      AlertManager.clearFieldError('employeeCount');
    };

    const handleLocationChange = () => {
      AlertManager.clearFieldError('locations');
    };

    const handleSliderInput = () => {
      numberInput.value = slider.value;
      AlertManager.clearFieldError('employeeCount');
    };

    const handleSubmit = async (e: Event) => {
      e.preventDefault();
      
      AlertManager.clearAllFieldErrors('step1Form');
      
      const employees = parseInt(numberInput.value);
      const locations = locationSelect.value;

      let hasErrors = false;

      if (!employees || employees < 1) {
        AlertManager.showFieldError('employeeCount', 'Debes indicar al menos 1 empleado');
        hasErrors = true;
      } else if (employees > 100) {
        AlertManager.showFieldError('employeeCount', 'MÃ¡ximo 100 empleados');
        hasErrors = true;
      }

      if (!locations) {
        AlertManager.showFieldError('locations', 'Debes seleccionar el nÃºmero de sedes');
        hasErrors = true;
      }

      if (hasErrors) {
        if (typeof window.showAlert === 'function') {
          window.showAlert('Por favor completa todos los campos requeridos', 'error');
        }
        return;
      }

      submitBtn.disabled = true;
      submitBtn.textContent = 'Guardando...';

      try {
        const formData = new FormData(form);
        const response = await actions.wizardStep(formData);

        if (response.error) {
          const errorMessage = response.error.message || 'Error al guardar los datos';
          if (typeof window.showAlert === 'function') {
            window.showAlert(errorMessage, 'error');
          }
          
          const errorData = response.error as any;
          if (errorData.fields && typeof errorData.fields === 'object') {
            Object.entries(errorData.fields as Record<string, string[]>).forEach(([field, messages]) => {
              if (Array.isArray(messages) && messages.length > 0) {
                AlertManager.showFieldError(field, messages[0]);
              }
            });
          }
          return;
        }

        if (response.data?.success) {
          if (typeof window.showAlert === 'function') {
            window.showAlert('âœ“ Datos guardados correctamente', 'success', 1500);
          }
          
          setTimeout(() => {
            document.dispatchEvent(new CustomEvent('wizard:next'));
          }, 1500);
        }
      } catch (error) {
        if (typeof window.showAlert === 'function') {
          window.showAlert('Error inesperado. Por favor intenta de nuevo.', 'error');
        }
        console.error('[Step1] Submit error:', error);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Continuar';
      }
    };

    numberInput.addEventListener('input', handleNumberInput);
    locationSelect.addEventListener('change', handleLocationChange);
    slider.addEventListener('input', handleSliderInput);
    form.addEventListener('submit', handleSubmit);

    // Cleanup on navigation
    document.addEventListener('astro:before-preparation', cleanup, { once: true });
    
    return cleanup;
  }

  // Inicializar solo una vez
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeStep1);
  } else {
    initializeStep1();
  }
</script>