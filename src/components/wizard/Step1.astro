---  
import { actions } from 'astro:actions';
import Alert from '../ui/Alert.astro';
const { data } = Astro.props;
---

<form class="pt-4 max-w-3xl mx-auto" id="step1Form">
  <input type="hidden" name="step" value="1" />

  <!-- Alertas -->
  <Alert id="successAlert" type="success" />
  <Alert id="errorAlert" type="error" />
  <Alert id="warningAlert" type="warning" />

  <div class="space-y-4">
    <!-- Header compacto -->
    <div>
      <h2 class="text-lg font-medium">
        1. Â¿CuÃ¡ntos empleados deseas gestionar?
      </h2>
      <p class="text-xs text-slate-600 mt-1">
        El precio se calcula por empleado y paquete seleccionado.
      </p>
    </div>

    <!-- Grid principal: 2 columnas en desktop -->
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Columna izquierda: Slider y nÃºmero -->
      <div class="space-y-3">
        <div>
          <label class="block text-sm font-medium mb-2"
            >NÃºmero de empleados</label
          >
          <input
            id="employeeRangeSlider"
            type="range"
            min="1"
            max="100"
            value={data.company?.employees ?? 5}
            class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-blue-500"
          />
          <div class="flex justify-between text-xs text-slate-500 mt-1">
            <span>1</span>
            <span>25</span>
            <span>50</span>
            <span>75</span>
            <span>100</span>
          </div>
        </div>

        <div class="flex items-end gap-2">
          <div class="flex-1">
            <label class="block text-xs font-medium mb-1">NÃºmero exacto</label>
            <input
              id="employeeCount"
              name="employees"
              type="number"
              min="1"
              value={data.company?.employees ?? 5}
              required
              class="w-full rounded-md border px-3 py-2 text-sm"
            />
          </div>
          <a
            type="button"
            href="tel:+1234567890"
            class="w-full md:w-auto text-gray-300 hover:underline text-sm font-medium"
          >
            +100 empleadosðŸ’¬
          </a>
        </div>
      </div>

      <!-- Columna derecha: Sedes -->
      <div class="space-y-3">
        <div>
          <label class="block text-sm font-medium mb-2"
        >Sedes de tu empresa</label
          >
          <select
        id="locations"
        name="locations"
        required
        class="w-full rounded-md border px-3 py-2 text-sm"
          >
        <option value="" selected={!data.company?.locations}>Selecciona una opciÃ³n</option>
        <option value="1" selected={data.company?.locations === '1'}>1 sede</option>
        <option value="2" selected={data.company?.locations === '2'}>2 sedes</option>
        <option value="3" selected={data.company?.locations === '3'}>3 sedes</option>
        <option value="4" selected={data.company?.locations === '4'}>4+ sedes</option>
          </select>
        </div>
      </div>
    </div>

    <!-- BotÃ³n -->
    <div class="flex justify-end">
      <button
        type="submit"
        class="bg-slate-600 text-white px-4 py-2 rounded-md hover:bg-slate-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
        id="submitBtn"
      >
        Continuar
      </button>
    </div>
  </div>
</form>

<script>
  import { actions } from 'astro:actions';
  import { AlertManager } from '../../lib/alertUtils';

  const form = document.getElementById('step1Form') as HTMLFormElement;
  const slider = document.getElementById('employeeRangeSlider') as HTMLInputElement;
  const numberInput = document.getElementById('employeeCount') as HTMLInputElement;
  const locationSelect = document.getElementById('locations') as HTMLSelectElement;
  const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;

  // Limpiar errores al escribir
  numberInput.addEventListener('input', () => {
    const value = parseInt(numberInput.value) || 0;
    if (value <= 100) {
      slider.value = numberInput.value;
    }
    AlertManager.clearFieldError('employeeCount');
    AlertManager.hide('errorAlert');
  });

  locationSelect.addEventListener('change', () => {
    AlertManager.clearFieldError('locations');
    AlertManager.hide('errorAlert');
  });

  slider.addEventListener('input', () => {
    numberInput.value = slider.value;
    AlertManager.clearFieldError('employeeCount');
  });

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Limpiar errores previos
    AlertManager.clearAllFieldErrors('step1Form');
    AlertManager.hide('errorAlert');
    AlertManager.hide('successAlert');
    
    // ValidaciÃ³n del lado del cliente
    const employees = parseInt(numberInput.value);
    const locations = locationSelect.value;

    let hasErrors = false;

    if (!employees || employees < 1) {
      AlertManager.showFieldError('employeeCount', 'Debes indicar al menos 1 empleado');
      hasErrors = true;
    } else if (employees > 1000) {
      AlertManager.showFieldError('employeeCount', 'MÃ¡ximo 1000 empleados');
      hasErrors = true;
    }

    if (!locations) {
      AlertManager.showFieldError('locations', 'Debes seleccionar el nÃºmero de sedes');
      hasErrors = true;
    }

    if (hasErrors) {
      AlertManager.showError('errorAlert', 'Por favor completa todos los campos requeridos');
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Guardando...';

    try {
      const formData = new FormData(form);
      const response = await actions.wizardStep(formData);

      if (response.error) {
        const errorMessage = response.error.message || 'Error al guardar los datos';
        AlertManager.showError('errorAlert', errorMessage);
        
        // Mostrar errores especÃ­ficos de campos si existen
        const errorData = response.error as any;
        if (errorData.fields && typeof errorData.fields === 'object') {
          Object.entries(errorData.fields as Record<string, string[]>).forEach(([field, messages]) => {
            if (Array.isArray(messages) && messages.length > 0) {
              AlertManager.showFieldError(field, messages[0]);
            }
          });
        }
        return;
      }

      if (response.data?.success) {
        AlertManager.showSuccess('successAlert', 'âœ“ Datos guardados correctamente', 1500);
        
        setTimeout(() => {
          window.location.href = `/?step=${response.data.nextStep}`;
        }, 1500);
      }
    } catch (error) {
      AlertManager.showError('errorAlert', 'Error inesperado. Por favor intenta de nuevo.');
      console.error('Error:', error);
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Continuar';
    }
  });
</script>